{
    "name": "jengo/base",
    "description": "New Jengo based on the current knowledge I have of ci4",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jengo\\Base\\": "src/",
            "Jengo\\Base\\Vite\\": "src/Vite/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tests\\Support\\": "tests/_support/"
        }
    },
    "authors": [
        {
            "name": "Ian Otieno",
            "email": "ochiengian383@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5"
    },
    "require": {
        "fakerphp/faker": "^1.24",
        "codeigniter4/framework": "^4.7",
        "mindplay/php-vite": "^1.1"
    },
    "scripts": {
        "test": "phpunit"
    }
}
